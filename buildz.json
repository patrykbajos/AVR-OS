{
    "build": {
        "type": "release",
        "targets": "all"
    },
    "modules": ["modularos-core", "modularos-usart"],
    "toolchains": {
        "avr-gcc": {
            "type": "AvrGccToolchain",
            "output_dir": "{build_type}",
            "output_pattern": "{module_name}_{target_name}_{env[fcpu]}",
            "conf": {
                "gcc_path": "/usr/bin/avr-gcc"
            },
            "env": {
                "defines": ["BUILD_TYPE={build.type}"],
                "includes": ["includes"]
            }
        }
    },
    "targets": {
        "atmega8": {
            "modules": "all",
            "toolchain": "avr-gcc",
            "env": {
                "mcu": "atmega8",
                "fcpu": [1000000, 16000000]
            }
        },
        "atmega16": {
            "modules": "all",
            "toolchain": "avr-gcc",
            "env": {
                "mcu": "atmega16",
                "fcpu": [16000000, 1000000]
            }
        }
    }
}